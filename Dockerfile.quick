FROM ubuntu:24.04

# Install build dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    pkg-config \
    libboost-all-dev \
    lcov \
    libgtest-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /build
COPY . .

# Build script
COPY docker-quick-build.sh /build/
RUN chmod +x /build/docker-quick-build.sh
